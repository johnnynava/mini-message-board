<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a href="/new">Add a new message</a>
    <div class="messages">
      <% messages.forEach(message => { %>
      <div class="message">
        <p>User: <%= message.user %></p>
        <p>Message: <%= message.text %></p>
        <p>Added on: <%= message.added %></p>
      </div>
      <% }) %>
    </div>
  </body>
</html>
